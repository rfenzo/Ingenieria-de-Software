<h1>Songs</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Duracion</th>
      <th>Artist</th>
      <th>Album</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.Nombre %></td>
        <td><%= song.Duracion %></td>
        <td><%= song.artist.Nombre %></td>
        <td><%= song.album.Nombre %></td>
        <td><%= button_to 'Show', song ,:method => 'get', class: 'btn red-back white-font'%></td>
        <td><%= button_to 'Edit', edit_song_path(song) ,:method => 'get', class: 'btn red-back white-font'%></td>
        <td><%= button_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn red-back white-font'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Song', new_song_path , :method => 'get', class: 'btn red-back white-font'%>