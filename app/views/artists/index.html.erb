<h1>Artists</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Genero</th>
      <th>Origen</th>
      <th>Actividad</th>
      <th>Integrantes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.Nombre %></td>
        <td><%= artist.Descripcion %></td>
        <td><%= artist.Genero %></td>
        <td><%= artist.Origen %></td>
        <td><%= artist.Actividad %></td>
        <td><%= artist.Integrantes %></td>
        <td><%= button_to 'Show', artist , :method => "get", class: 'btn red-back white-font'%></td>
        <td><%= button_to 'Edit', edit_artist_path(artist) , :method => "get", class: 'btn red-back white-font'%></td>
        <td><%= button_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn red-back white-font'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New Artist', new_artist_path , :method => "get", class: 'btn red-back white-font'%>