<p>
    <%= image_tag @album.image.url(:middle) %>
</p>

<p>
  <strong>Nombre:</strong>
  <%= @album.Nombre %>
</p>

<p>
  <strong>Fecha:</strong>
  <%= @album.Fecha %>
</p>

<p>
  <strong>Artist:</strong>
  <%= @album.artist.Nombre %>
</p>

<br>
<h3>Canciones:</h3>
<%@album.songs.each do |s|%>
<ul class='row'>
  <li>
    <%=link_to s.Nombre, s%>
  </li>
</ul>
<%end%>

<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Back', albums_path %>